<%= render partial: 'nav' %>
<h4 class="text-center">Draw Money</h4>
<%= render 'layouts/messages' %>
<div class="col-md-6 col-md-offset-3">
<%= form_for :data, url: draws_path, :html => {:method => :post} do |f| %>
  <div class="form-group">
    <%= f.text_field :amount, :class => "form-control", :placeholder => "Amount" %>
  </div>
  <div class="form-group">
    <%= f.text_field :credit_line_id, :class => "form-control", :placeholder => "Credit Line" %>
  </div>
  <div class="form-group">
    <%= f.text_field :date_adjust, :class => "form-control", :placeholder => "Adjust Date" %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>
</div>