<%= render partial: 'nav' %>
<%= render 'layouts/messages' %>
<% if @data.is_a?(String) %>
  <h5><%= @data %></h5>
<% else %>
  <% payment = @data[:data] %>
  <div class="col-md-6 col-md-offset-3">
    <h4 class="text-center">Payment Details</h4>
    <ul class="list-group">
      <li class="list-group-item"><b>ID: </b><%= payment[:id] %></li>
      <li class="list-group-item"><b>Amount: </b><%= payment[:amount] %></li>
      <li class="list-group-item"><b>Credit Line: </b><%= payment[:credit_line_id] %></li>
      <li class="list-group-item"><b>Date Created: </b><%= payment[:created_at].to_date %></li>
    </ul>
  </div>
<% end %>