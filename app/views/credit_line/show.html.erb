<%= render partial: 'nav' %>
<%= render 'layouts/messages' %>
<% if @data.is_a?(String) %>
  <h5><%= @data %></h5>
<% else %>
  <% credit_line = @data[:data] %>
  <div class="col-md-6 col-md-offset-3">
    <h4 class="text-center">Credit Line</h4>
    <ul class="list-group">
      <li class="list-group-item"><b>ID: </b><%= credit_line[:id] %></li>
      <li class="list-group-item"><b>Limit: </b><%= credit_line[:limit] %></li>
      <li class="list-group-item"><b>APR: </b><%= credit_line[:apr] %></li>
      <li class="list-group-item"><b>Available: </b><%= credit_line[:available] %></li>
      <li class="list-group-item"><b>Last Statement: </b><%= credit_line[:last_statement].to_date %></li>
      <li class="list-group-item"><b>Date Created: </b><%= credit_line[:created_at].to_date %></li>
    </ul>
  </div>
<% end %>