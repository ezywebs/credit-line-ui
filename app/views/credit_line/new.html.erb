<%= render partial: 'nav' %>
<h4 class="text-center">Open New Credit Line</h4>
<%= render 'layouts/messages' %>
<div class="col-md-6 col-md-offset-3">
<%= form_for :data, url: credit_line_path, :html => {:method => :post} do |f| %>
  <div class="form-group">
    <%= f.text_field :limit, :class => "form-control", :placeholder => "Limit" %>
  </div>
  <div class="form-group">
    <%= f.text_field :apr, :class => "form-control", :placeholder => "APR" %>
  </div>
  <div class="form-group">
    <%= f.text_field :date_adjust, :class => "form-control", :placeholder => "Adjust Date" %>
  </div>
  <div class="form-group">
    <%= f.submit "Submit", :class => "btn btn-primary" %>
  </div>
<% end %>
</div>